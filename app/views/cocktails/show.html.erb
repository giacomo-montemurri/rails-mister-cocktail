<h2><%= @cocktail.name %></h2>



<%= link_to "Go Back", cocktails_path %>
<p><%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %></p>


<% @cocktail.doses.each do |dose| %>
 <p><%= Ingredient.find(dose.ingredient_id).name %>: <%= dose.description %> - <%= link_to 'Delete', dose_path(dose), method: :delete, data:{confirm: "Are you sure?"} %></p>
 <% end %>
